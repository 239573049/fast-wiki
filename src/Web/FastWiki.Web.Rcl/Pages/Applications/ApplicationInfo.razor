@page "/application/{Id}"

@inject IChatApplicationService ChatApplicationService

<MCard Class="mt-6" Style="padding: 8px;height:80vh;overflow:auto;">
    <MTabs Vertical>
        <MTab>
            应用配置
        </MTab>
        <MTab>
            对话记录
        </MTab>
        <MTab>
            发布应用
        </MTab>

        <MTabItem>
            <MCard Flat Style="padding:5px;">
                <ApplicationConfiguration Value="Application"></ApplicationConfiguration>
            </MCard>
        </MTabItem>
        <MTabItem>
            <MCard Flat Style="padding: 5px;">
                <ApplicationSessionLog ChatApplicationId="@Application.Id" />
            </MCard>
        </MTabItem>
        <MTabItem>
            <MCard Flat Style="padding: 5px;">
                <PublishChatShare Value="Application" />
            </MCard>
        </MTabItem>
    </MTabs>
</MCard>