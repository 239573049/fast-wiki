@inject IChatApplicationService ChatApplicationService



<MList Nav
       Dense>
    <MListItemGroup @bind-Value="SelectedItem"
                    Color="primary">
        <MButton
            OnClick="CreateDialogAsync" Block Style="margin-bottom:8px;">新建对话</MButton>

        @foreach (var item in _chatDialogs)
        {
            <MListItem Value="item.Id">
                <MListItemContent>
                    <MListItemTitle>@item.Name</MListItemTitle>
                </MListItemContent>
            </MListItem>
        }
    </MListItemGroup>
</MList>