
<div style="width:@Width;height:@Height">
    @if (FuntionContent != null)
    {
        <div >
            @FuntionContent
        </div>
    }
    <textarea class="fast-textarea block @Class" placeholder=@Placeholder @onfocus="OnFocus" @onblur="OnBlur" style="width:@Width;height:@Height;resize:none;"></textarea>
    <div style="display: flex;">
        <MSpacer></MSpacer>
        <MButton>
            发送
        </MButton>
    </div>
</div>

<style>

    .fast-textarea {
        position: relative;
        border: none;
        max-width: 100%;
        padding: 8px 12px;
        border-radius: 4px; /* Assuming a border-radius of 4px */
        border: 1px solid #ccc; /* Assuming a default border color */
        transition: background-color 100ms ease-out, border-color 200ms ease-out;
        resize: none; /* 禁止调整大小 */
    }

        .fast-textarea.ghost {
            background-color: transparent;
            border: 1px solid #ccc; /* Assuming a default border color for 'ghost' */
        }

        .fast-textarea.block {
            background-color: #f0f0f0; /* Assuming a fill tertiary color */
            border: 1px solid transparent;
        }

        .fast-textarea.pure {
            height: unset;
            padding: 0;
            border-radius: 0;
        }

        .fast-textarea:hover {
            background-color: #f0f0f0; /* Assuming a fill tertiary color for hover */
        }

        .fast-textarea:focus {
            border-color: #999; /* Assuming a text quaternary color for focus */
            outline: none; /* Removing default focus outline */
        }

        .fast-textarea.input-affix-wrapper-focused {
            border-color: #999; /* Assuming a text quaternary color for input affix focus */
        }
</style>